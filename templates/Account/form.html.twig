{% extends './baseForm.html.twig' %}
{% block title %}{% endblock %}
{% block action %}{% if data['id'] is defined %}konto-edytuj/{% else %}konto-dodaj/{% endif %}{% endblock %}
{% block form %}
  {% if data['id'] is defined %}<input hidden type="text" name="id" value='{{ data['id'] }}' /><br/>{% endif %}

  <div class="form-group has-feedback">
    <label for="website" class="col-md-4 float-left">Strona</label>
    <input type="text"
          name="website"
          class="col-md-8 float-left mb-2"
          value='{% if data['Typ'] is defined %}{{ data['Typ'] }}{% endif %}'
          data-minlength="4"
          maxlength="20"
          data-required-error="Pole wymagane"
          data-minlength-error="Minimalna długość to 4 znaki"
          data-maxlength-error="Maksymalna długość to 20 znaków"
          required
          />
    <div class="help-block with-errors"></div>
  </div>

  <div class="form-group has-feedback ">
    <label for="login" class="col-md-4 float-left">Login</label>
    <input type="text"
          name="login"
          class="col-md-8 float-left mb-2"
          value='{% if data['Typ'] is defined %}{{ data['Typ'] }}{% endif %}'
          data-minlength="4"
          maxlength="20"
          data-required-error="Pole wymagane"
          data-minlength-error="Minimalna długość to 4 znaki"
          data-maxlength-error="Maksymalna długość to 20 znaków"
          required
          />
    <div class="help-block with-errors"></div>
  </div>

  <div class="form-group has-feedback">
    <label for="password" class="col-md-4 float-left">Hasło</label>
    <input  id="password"
            type="password"
            name="password"
            class="col-md-8 float-left mb-2"
            value='{% if data['passwd'] is defined %}{{ data['passwd'] }}{% endif %}'
            data-minlength="2"
            maxlength="32"
            data-required-error="Pole wymagane"
            data-minlength-error="Minimalna długość to 8 znaków"
            data-maxlength-error="Maksymalna długość to 32 znaków"
            required
          />
    <div class="help-block with-errors"></div>
  </div>

  <div class="form-group has-feedback ">
    <label for="confirm-password" class="col-md-4 float-left">Potwierdź hasło</label>
    <input type="password"
          name="confirm-password"
          class="col-md-8 float-left mb-2"
          data-match="#password"
          data-match-error="pola różnią się od siebie"
          required
          data-required-error="Pole wymagane"
          />
    <div class="help-block with-errors"></div>
  </div>

  <div class="form-group has-feedback ">
    <label for="main-password" class="col-md-4 float-left">Hasło główne</label>
    <input type="password"
          name="main-password"
          class="col-md-8 float-left mb-2"
          required
          data-required-error="Pole wymagane"
          />
   <div class="help-block with-errors"></div>
  </div>
  <div id="encrypted"></div>
  <div id="decrypted"></div>
{% endblock %}
{% block submitName %}Dodaj konto{% endblock %}
